      <mt:trans phrase="Post" component="PostOnTwitter">
    </div>
    <div class="col-lg-10">
      <mt:if name="tweeted_on">
        <mt:var name="tweeted_on" format_ts="Y-m-d H:i:s" setvar="tweeted_on_formated">

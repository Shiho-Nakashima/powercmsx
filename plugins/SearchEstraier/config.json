        "searchestraier_cookie_name" : "pt-visitor",
        "searchestraier_interests_cookie" : "pt-visitor_interests",
        "searchestraier_cookie_expires" : 365,
        "searchestraier_draft_capacity" : 100000,
        "searchestraier_thumb_minimum_area" : 1500,
